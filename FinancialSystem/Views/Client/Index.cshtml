@model List<Model.Entity.Client>
@{
    ViewBag.Title = "List of Clients";
}


<a href="">Reports</a>
<h2 class="text-center text-success">List of Clients</h2>
<div class="well well-sm"><a class="btn btn-primary" href="~/Client/Create">New</a></div>
<table class="table table-hover table-striped">
    <thead>
        <tr class="bg-primary">
            <th>Code</th>
            <th>Name</th>
            <th>PPS</th>
            <th>Address</th>
            <th>Phone</th>
            <th colspan="3">Operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var objClient in Model)
        {
            <tr>
                <td>@objClient.IdClient</td>
                <td>@objClient.Name</td>
                <td>@objClient.Pps</td>
                <td>@objClient.Address</td>
                <td>@objClient.Phone</td>
                <td><a class="btn btn-success" href="~/Client/Find/@objClient.IdClient"><span class="glyphicon glyphicon-eye-open"></span></a></td>
                <td><a class="btn btn-info" href="~/Client/Update/@objClient.IdClient"><span class="fa fa-edit"></span></a></td>
                <td><a class="btn btn-danger" href="~/Client/Remove/@objClient.IdClient"><span class="fa fa-book"></span></a></td>
            </tr>
        }
    </tbody>

</table>